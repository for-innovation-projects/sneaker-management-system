/* pages/my/collection-information/index.wxss */
.order-create {
  font-size: 30rpx;
}

.order-create .divider-line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.order-create .form-content {
  --td-input-vertical-padding: 0;
}

.order-create .form-cell .t-cell__title {
  width: 144rpx;
  padding-right: 32rpx;
  flex: none !important;
}

.order-create .submit {
  box-sizing: border-box;
  padding: 50rpx 30rpx 88rpx 30rpx;
}

.order-create .submit .btn-submit-save {
  color: #fff !important;
}

.order-create .suffix--line {
  width: 1px;
  height: 24px;
  background-color: var(--td-component-stroke, #f3f3f3);
  margin-right: 16px;
}

.order-create .form-upload {
  padding: 0 var(--td-cell-horizontal-padding, 32rpx) var(--td-cell-vertical-padding, 32rpx);
  background-color: var(--td-cell-bg-color, var(--td-bg-color-container, var(--td-font-white-1, #ffffff)));
}

.order-create .form-upload.image-eg {
  display: flex;
  gap: 25rpx;
}

.order-create .verify.loading {
  color: var(--td-brand-color, #cccccc);
}

.size-add-content {
  background-color: #f5f5f5;
  height: 40vh;
  padding-top: 20rpx;
}

.order-create .t-textarea {
  padding: 0 !important;
}
