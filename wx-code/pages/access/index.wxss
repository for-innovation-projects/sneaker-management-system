.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #ffffff;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.illustration {
  position: relative;
  width: 400rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

/* 消息气泡 */
.message-bubble {
  position: absolute;
  top: 60rpx;
  left: 80rpx;
  width: 160rpx;
  height: 120rpx;
  background-color: #e6f0ff;
  border-radius: 20rpx;
  transform: rotate(-5deg);
}

.message-bubble:before {
  content: "";
  position: absolute;
  bottom: -20rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #e6f0ff;
  transform: rotate(45deg);
}

.dot {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background-color: #a0c4ff;
  border-radius: 50%;
}

.dot-1 {
  top: 40rpx;
  left: 40rpx;
}

.dot-2 {
  top: 40rpx;
  left: 70rpx;
}

.dot-3 {
  top: 40rpx;
  left: 100rpx;
}

/* 飘动的叶子 */
.leaf {
  position: absolute;
  width: 30rpx;
  height: 60rpx;
  background-color: #a0c4ff;
  border-radius: 50% 50% 50% 0;
  transform: rotate(-45deg);
}

.leaf-1 {
  top: 30rpx;
  left: 240rpx;
  animation: float 3s ease-in-out infinite;
}

.leaf-2 {
  top: 80rpx;
  left: 60rpx;
  transform: rotate(135deg);
  animation: float 3.5s ease-in-out infinite 0.5s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(-45deg);
  }
  50% {
    transform: translateY(-15rpx) rotate(-45deg);
  }
}

/* 将小人相关的CSS部分颜色从 #333 改为更浅的颜色 */

/* 人物 */
.person {
  position: absolute;
  bottom: 40rpx;
  right: 80rpx;
}

.head {
  width: 50rpx;
  height: 50rpx;
  background-color: #8ca3c3;  /* 改为浅蓝灰色 */
  border-radius: 50%;
  position: relative;
}

.body {
  width: 40rpx;
  height: 80rpx;
  background-color: #8ca3c3;  /* 改为浅蓝灰色 */
  margin-left: 5rpx;
  border-radius: 20rpx;
}

.arm {
  position: absolute;
  width: 60rpx;
  height: 12rpx;
  background-color: #8ca3c3;  /* 改为浅蓝灰色 */
  top: 70rpx;
  left: -20rpx;
  border-radius: 6rpx;
  transform: rotate(30deg);
}

.leg {
  position: absolute;
  width: 12rpx;
  height: 40rpx;
  background-color: #8ca3c3;  /* 改为浅蓝灰色 */
  bottom: -40rpx;
  border-radius: 6rpx;
}

.leg-left {
  left: 8rpx;
}

.leg-right {
  left: 28rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-top: 20rpx;
}

